import sys, os.path
from optparse import OptionParser

VERSION = 0.1

DESCRIPTION = """
"""

parser = OptionParser(usage = "abspath [options]... [file]...",
	   description = DESCRIPTION,
	   version = "abspath %s" % VERSION)

parser.add_option("-r", "--real-path", action="store_true", dest="realPath", help="")

opts, args = parser.parse_args()

for path in args :
  abspath = os.path.abspath(path)
  if opts.realPath:
    abspath = os.path.realpath(abspath)
  print abspath
  
